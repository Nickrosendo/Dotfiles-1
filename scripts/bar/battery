#!/bin/sh
status="$(cat /sys/class/power_supply/BAT1/status)"
capacity="$(cat /sys/class/power_supply/BAT1/capacity)"
estimated="$(acpi -b | grep "remaining" | awk '{print $5}')"
case $status in
    Charging)
	icon="ðŸ”Œ"
    ;;
    Discharging)
	icon="ðŸ”‹"
    ;;
esac
printf "%s %s (%s)\\n" "$icon" "$capacity" "$estimated"
